                <td>
                    @row["GroupName"]
                </td>
                <td>
                    <a href="javascript:EditInfo(@row["GroupId"],'@row["GroupName"]');" class="del">编辑</a>
                    <a href="javascript:SetPower(@row["GroupId"]) ;" class="del">设置权限</a>
                </td>
            </tr>
        }
    </tbody>
</table>
