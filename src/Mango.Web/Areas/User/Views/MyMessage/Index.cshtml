@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "我的消息";
}
@model Mango.Web.ViewModels.MessageViewModel
<div class="row">
    <!--左边菜单部分-->
    <div class="col-lg-3">
        @Html.PartialAsync("~/Areas/User/Views/Menu.cshtml").Result
    </div>
    <div class="col-lg-9">
        <div class="my-3 p-3 bg-white rounded box-shadow">
            @*<h5 class="border-bottom border-gray pb-2 mb-0">我的消息</h5>*@
            @foreach (var item in Model.ListData)
            {
                <div class="media pt-2 border-bottom border-gray ">
                    <div class="media-body pb-3 mb-0 small lh-125">
                        <h6 class="d-block">帖子消息</h6>
                        <div class="text">
                            @Html.Raw(item.Contents)
                        </div> 
                    </div>
                </div>
            }
            <div class="row" style="margin-top:10px;">
                <div class="col-lg-12">
                    <nav aria-label="">
                        <ul class="pagination">
                            @if (Model.TotalCount > 0)
                            {
                                @Html.Pager(ViewContext.HttpContext.Request, 10, Model.TotalCount)
                            }
                            else
                            {
                                <li>没有数据记录...</li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts{
    <script src="~/lib/artdialog/dialog.min.js"></script>
    <script type="text/javascript">
        $(window).ready(function () {
            //选中左边菜单栏
            $("#leftmenu_Message").addClass("active");
        });
    </script>
}
