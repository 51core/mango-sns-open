<script type="text/javascript">
    $(window).ready(function () {
        //选中左边菜单栏
        $("#leftmenu_Info").addClass("active");
    });
    //处理图片上传
    $("#showImageFileUploadBtn").click(function () {
        $('#showInputImageFile').trigger('click');
    });
    var oldAvatar = '@Model.HeadUrl';
    $.FlyUpload({
        url: '',
        id: 'showInputImageFile',
        auto: true,
        preview: function (url) {
            $("#avatar").removeAttr("style");
            $("#avatar").attr('src', '/images/loading.gif');
        },
        success: function (url) {
            url = ImageServerUrl + url;
            $.ajax({
                type: 'post',
                url: '/user/info/edit',
                data: 'fieldName=avatar&fieldValue=' + url,
                success: function (result) {
                    if (result) {
                        $("#avatar").attr('src', url);
                        $("#avatar").attr('style', 'width:120px;height:120px;');
                    }
                    else { 
                        $("#avatar").attr('src', oldAvatar);
                        $("#avatar").attr('style', 'width:120px;height:120px;');
                    }
                },
                error: function (ex) { 
                    $("#avatar").attr('src', oldAvatar);
                    $("#avatar").attr('style', 'width:120px;height:120px;');
                }
            });
        }
    });
</script>
