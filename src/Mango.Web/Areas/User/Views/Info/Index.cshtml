                        <td>
                            <span id="showNickName">@Model.NickName</span>
                        </td>
                        <td>
                            <input type="button" class="btn" value="编辑" id="btn_EditNickName" />
                        </td>
                    </tr>
                    <tr>
                        <td>性别:</td>
                        <td>
                            <span id="showSex">@Model.Sex</span>
                        </td>
                        <td>
                            <input type="button" class="btn" value="编辑" id="btn_EditSex" />
                        </td>
                    </tr>
                    <tr>
                        <td>所在城市:</td>
                        <td>
                            <span  id="showAddress">@Model.Address</span>
                        </td>
                        <td>
                            <input type="button" class="btn" value="编辑" id="btn_EditAddress"  />
                        </td>
                    </tr>
                    <tr>
                        <td>个人标签:</td>
                        <td>
                            <span  id="showTags">@Model.Tags</span>
                        </td>
                        <td>
                            <input type="button" class="btn" value="编辑" id="btn_EditTags"  />
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        
    </div>
</div>
